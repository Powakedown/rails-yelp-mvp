<div class="container">
  <h1>Restaurants du coin</h1>
  <div class="buttons">
    <%= link_to new_restaurant_path do %>
      <i class="fa fa-plus"></i>Ajouter un restaurant
    <% end %>
  </div>
  <hr>

  <ul class="list-group">

  <% @restaurants.each do |restaurant| %>
      <li class="list-group-item">
        <span class="badge">14</span>
        <%= restaurant.name %>
      </li>
  <% end %>

  </ul>

</div>

